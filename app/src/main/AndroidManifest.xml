<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.catcare"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- อนุญาตให้ยิง exact alarm (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <!-- รับเหตุการณ์เครื่องบูตเสร็จ เพื่อตั้งแจ้งเตือนใหม่ -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <!-- ขอสิทธิ์แจ้งเตือน (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_catcare"
        android:roundIcon="@drawable/ic_catcare_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <activity
            android:name=".VaccineActivity"
            android:exported="false"
            android:label="@string/vaccine_title"/>

        <activity
            android:name=".NoteActivity"
            android:exported="false"
            android:label="@string/Note_title"/>

        <activity
            android:name=".TimerActivity"
            android:exported="false"
            android:label="@string/Timer_Title"/>

        <!-- (ไม่บังคับ) หน้า 3 -->
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:label="@string/Addnote_title"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Receiver สำหรับแจ้งเตือนให้อาหาร -->
        <receiver
            android:name=".alarm.FeedingAlarmReceiver"
            android:exported="true"/>

        <!-- Receiver สำหรับเตือนวัคซีน -->
        <receiver
            android:name=".alarm.VaccineReminderReceiver"
            android:exported="true"/>

        <!-- Receiver เมื่อเครื่องบูตเสร็จ เพื่อรีตั้ง alarm -->
        <receiver
            android:name=".alarm.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
